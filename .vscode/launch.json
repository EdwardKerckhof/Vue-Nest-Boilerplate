{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "attach",
      "name": "Debug: BP API",
      "remoteRoot": "/usr/src/bp/packages/api",
      "localRoot": "${workspaceFolder}/packages/api",
      "protocol": "inspector",
      "port": 9229,
      "restart": true,
      "address": "0.0.0.0",
      "skipFiles": [
        "<node_internals>/**",
        "node_modules",
        "packages/app",
        "packages/common"
      ]
    }
  ]
}
