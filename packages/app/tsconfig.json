{
  "extends": "../../tsconfig.json",
  "include": ["src/**/*.ts", "src/**/*.d.ts", "src/**/*.vue"],
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "jsx": "preserve",
    "experimentalDecorators": true,
    "lib": ["ESNext", "dom"],
    "types": ["node"],
    "baseUrl": "/",
    "paths": {
      "@/*": ["src/*"]
    }
  }
}
